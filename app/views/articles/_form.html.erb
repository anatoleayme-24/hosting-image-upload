<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body, input_html: { rows: 5 } %>

    <div data-controller="image-preview">
      <%= f.input :photo, as: :file, input_html: { "data-image-preview-target": "input", "data-action": "change->image-preview#show", accept: "image/*" } %>
      <div data-image-preview-target="preview" class="mt-2" style="display: none;">
        <img data-image-preview-target="img" src="" alt="AperÃ§u" class="rounded" style="max-height: 160px; max-width: 100%; object-fit: cover;">
      </div>
    </div>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
